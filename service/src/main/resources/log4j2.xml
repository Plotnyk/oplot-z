<?xml version="1.0" encoding="UTF-8"?>
<Configuration  status="INFO">
    <Appenders>
        <File name="fileLog" fileName="service.log">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %-5level - %msg%n" />
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %-5level - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <logger name="app.service" level="OFF">
            <AppenderRef ref="fileLog" level = "OFF"/>
        </logger>
        <Root level="ERROR">
            <AppenderRef ref="STDOUT" level = "ERROR"/>
            <AppenderRef ref="fileLog" level = "ERROR"/>
        </Root>
    </Loggers>
</Configuration>
